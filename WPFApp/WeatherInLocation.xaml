<Page x:Class="WPFApp.WeatherInLocation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WeatherInLocation">

    <Grid>
        <StackPanel >
            <Button x:Name="loadWeather" Margin="20"  Click="loadWeather_Click">Load Weather from API</Button>
            <TextBlock x:Name="Temp_min" Margin="20" />
            <TextBlock x:Name="Temp_max" Margin="20" />
            <TextBlock x:Name="Description" Margin="20" />
            <TextBlock x:Name="City" Margin="20" />
        </StackPanel>
    </Grid>
</Page>
